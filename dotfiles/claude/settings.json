{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(gh pr view:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr diff:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git branch:*)",
      "Bash(git show:*)",
      "Bash(git add:*)",
      "Bash(gh pr list:*)",
      "Bash(gh issue list:*)",
      "Bash(forge build:*)",
      "Bash(forge test:*)",
      "Bash(forge coverage:*)",
      "Bash(forge snapshot:*)",
      "Bash(forge fmt:*)",
      "Bash(forge fmt --check:*)",
      "Bash(forge tree:*)",
      "Bash(slither .:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(tree:*)",
      "Bash(just build-dev:*)",
      "Bash(just test-dev:*)",
      "Bash(just pre-pr)"
    ],
    "deny": [],
    "ask": []
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline-command.sh",
    "padding": 0
  },
  "alwaysThinkingEnabled": true,
  "hooks": {
  "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/permission-prompt.sh"
          }
        ]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/idle-prompt.sh"
          }
        ]
      }
    ]
  }
}
